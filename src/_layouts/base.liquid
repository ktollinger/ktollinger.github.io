<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <head>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    </head>
    
    <title>{{ title | default: page.fileSlug }}</title>
    <style>
      .material-symbols-outlined {
        font-variation-settings:
        'FILL' 0,
        'wght' 400,
        'GRAD' 0,
        'opsz' 24
      }
    </style>
  </head>
  <body>
  <div class="root">
    <div class="main">
      <div class="container">
        <div class="metadata">
          <h1>{{ title | default: page.fileSlug }}</h1>
          <div class="subtitle">{{ description }}</div>
          <div class="infoline"><i class="fa-solid fa-phone fa-fw"></i> {{ phone }}</div>
          <div class="infoline"><i class="fa-solid fa-map-location-dot fa-fw"></i> {{ address }}</div>
          <div class="infoline"><i class="fa-regular fa-envelope fa-fw"></i> {{ email }}</div>
          <div class="infoline"><i class="fa-brands fa-linkedin fa-fw"></i> <a href="{{ linkedin }}">{{ linkedin }}</a> </div>
        </div>
        <div class="image-container">
            <img src="img/kamil.jpg" width="200" height="200" alt="Portrait Image">
        </div>
      </div>    
{{ content }}
    </div>
  </div>
  </body>
</html>